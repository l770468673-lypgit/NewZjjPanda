<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <View
        android:id="@+id/v_arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_corner_bg"
        android:divider="@drawable/divider_horizontal_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/pop_tv_card_manage_set_default_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="设置默认卡"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/pop_tv_card_manage_delete_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="删除公交卡"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>