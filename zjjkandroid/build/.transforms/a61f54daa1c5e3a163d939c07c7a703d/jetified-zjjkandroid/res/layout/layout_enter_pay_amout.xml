<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/pay_second_headings"
        android:text="选择金额:" />

    <com.crb.cttic.mvp.view.base.KeyRadioGroupV1
        android:id="@+id/krg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_ten"
                style="@style/CRadioButton"
                android:text="10元" />

            <RadioButton
                android:id="@+id/rb_twenty"
                style="@style/CRadioButton"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="20元" />

            <RadioButton
                android:id="@+id/rb_thirty"
                style="@style/CRadioButton"
                android:text="30元" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_fifty"
                style="@style/CRadioButton"
                android:text="50元" />

            <RadioButton
                android:id="@+id/rb_one_hundred"
                style="@style/CRadioButton"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="100元" />

            <RadioButton
                android:id="@+id/rb_two_hundred"
                style="@style/CRadioButton"
                android:text="200元" />

        </LinearLayout>

    </com.crb.cttic.mvp.view.base.KeyRadioGroupV1>
    <!--页面警告信息提醒文本框-->
    <LinearLayout
        android:id="@+id/ll_recharge_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:text="说明"
        android:textColor="@color/color_title_name"/>
    <TextView
        android:id="@+id/tv_card_recharge_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_black_2"
        android:textSize="15sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_go_loading"
        style="@style/btn_common_style"
        android:layout_marginTop="29dp"
        android:text="确认充值"/>


</LinearLayout>