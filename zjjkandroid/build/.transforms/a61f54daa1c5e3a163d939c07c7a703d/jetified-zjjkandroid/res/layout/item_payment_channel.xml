<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40px"
    android:gravity="center_vertical"
    android:background="@drawable/bg_rv_recharge"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_payment_channel"
        android:layout_width="75px"
        android:layout_height="75px"
        android:src="@mipmap/logo"
        android:layout_marginRight="20px"
        />

    <TextView
        android:id="@+id/tv_payment_channel_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="测试"
        />
    <TextView
        android:id="@+id/tv_channel_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25px"
        />
    <ImageView
        android:id="@+id/rb_selected"
        android:layout_width="50px"
        android:clickable="false"
        android:layout_height="50px"
        android:src="@mipmap/icon_no_check"/>

</LinearLayout>